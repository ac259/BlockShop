{{# if products }}
<div class="container">
	<div class="row mx-auto">
		<div class="col-sm-7 col-md-7 col-md-offset-2 col-sm-offset-2">
			<ul class="list-group">
				{{# each products }}
					<li class="list-group-item">
  							 <span class="badge badge-light">{{this.qty}}</span>
						<strong>{{this.item.title}}</strong>
						<span class="badge badge-pill badge-danger float-right">${{ this.price }}</span>
							<div class="dropdown">
							  <button class="btn btn-primary btn-xs dropdown-toggle float-right" type="button" data-toggle="dropdown">Action
							  </button>
								<ul class="dropdown-menu">
								    <li><a href="/reduce/{{this.item._id}}">Reduce by 1 </a></li>
									<li><a href="/remove/{{this.item._id}}">Remove all </a></li>
  								</ul>

							</div>
					</li>
				{{/each}}
			</ul>

		</div>
	</div>
	<div class="row">
		<div class="col-sm-7 col-md-7 col-md-offset-2 col-sm-offset-2">
			<strong>Total: {{totalPrice}}</strong>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-sm-7 col-md-7 col-md-offset-2 col-sm-offset-2">
			<a href="/checkout" type="btn" class ="btn btn-success">Checkout</a>
		</div>
	</div>
{{ else }}
	</div>
		<div class="row">
			<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
				<h2> No items in Cart</h2>
			</div>
		</div>
	</div>
</div>
{{/if}}
