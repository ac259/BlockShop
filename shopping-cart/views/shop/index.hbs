<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if   noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

<script type="text/javascript" >
            $(document).ready(function() {        
        $('.carousel').carousel()
            });
</script>  
<div class="container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="https://m.media-amazon.com/images/G/01/kindle/merch/2019/Evergreen/VX-3200-ed-desktop-gw-1500x600-2._CB456668966_.jpg" alt="Los Angeles" style="width:100%; margin: auto; ">
      </div>

      <div class="item">
        <img src="https://m.media-amazon.com/images/G/01/digital/music/merch/2019/WeeklyBuild/030119/2Chainz_GW_1500x600._CB454841454_.jpg" alt="Chicago" style="width:100%; margin: auto; ">
      </div>
    
      <div class="item">
        <img src="https://m.media-amazon.com/images/G/01/Anything/test/images/detail/Gateway_graphics/CTM-D-1X._CB455060211_.jpg" alt="New york" style="width:100%; margin: auto; ">
      </div>
    </div>
<!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="container">
{{# each products }}
  <div class="row">
      {{# each this }}
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <img src="{{ this.imagePath}}" alt="..." class="img-responsive">
              <div class="caption">
                <h3>{{this.title}}</h3>
                <p class ="description">{{this.description}}</p>
                <div class="clearfix">
                  <div class="price float-left">${{this.price}}</div>
                  <a href="/add-to-cart/{{ this._id}}" class="btn btn-primary float-right" role="button">Add to Cart</a>
                </div>
              </div>
            </div>
          </div>
      {{/each}}
    </div>      
{{/each}}
</div>



